upstream app_server_codelm {
    server 127.0.0.1:8080 fail_timeout=0;
}

server {
    listen 80;
    listen 443 ssl;
    server_name newwavecomputers.com www.newwavecomputers.com;
    root /home/codelm/dist/frontend;

    ssl on;
    ssl_certificate /home/certs/newwavecomputers.com.pem;
    ssl_certificate_key /home/certs/newwavecomputers.com.key;

    # location = /favicon.ico { access_log off; log_not_found off; }

    location / {
        add_header Cache-Control no-cache;
        expires -1;
        try_files $uri @nodejs;
    }

    location @nodejs {
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_read_timeout 86400s;
        proxy_redirect off;
        proxy_pass http://app_server_codelm;
    }
}
